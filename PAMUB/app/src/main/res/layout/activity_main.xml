<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="-27dp">

        <EditText
            android:id="@+id/nilai1"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:hint="Masukkan bilangan 1"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/nilai2"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:hint="Masukkan bilangan 2"
            android:inputType="numberDecimal" />

        <RadioGroup
            android:id="@+id/radiobutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/radiotambah"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:hint="+"
            android:textSize="12pt" />

        <RadioButton
                android:id="@+id/radiokurang"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:textSize="15pt"
                android:hint="-"
                />

            <RadioButton
                android:id="@+id/radiokali"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:textSize="12pt"
                android:hint="x"
                />

            <RadioButton
                android:id="@+id/radiobagi"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:textSize="12pt"
                android:hint="/"
                />

        <Button
            android:id="@+id/buttonhitung"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Hitung" />
    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>